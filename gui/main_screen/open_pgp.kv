<OpenPGP>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Generate keys'
            background_color: 0, 1, 1, 1
            font_size: 40
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'generate_keys_screen'
        Button:
            text: 'Delete keys'
            background_color: 0, 1, 1, 1
            font_size: 40
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'delete_keys'
        Button:
            text: 'Import key'
            background_color: 0, 1, 1, 1
            font_size: 40
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 1
                root.manager.current = 'import_key_screen'
        Button:
            text: 'Export key'
            background_color: 0, 1, 1, 1
            font_size: 40
        Button:
            text: 'Public key ring'
            background_color: 0, 1, 1, 1
            font_size: 40
        Button:
            text: 'Private key ring'
            background_color: 0, 1, 1, 1
            font_size: 40
        Button:
            text: 'Send message'
            background_color: 0, 1, 1, 1
            font_size: 40
        Button:
            text: 'Receive message'
            background_color: 0, 1, 1, 1
            font_size: 40
