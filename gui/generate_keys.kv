<GenerateKeysScreen>:
    GridLayout:
        rows: 5
        cols: 2
        Label:
            text: 'Name'
        TextInput:
            text: 'Input name'
        Label:
            text: 'Email'
        TextInput:
            text: 'Input mail'
        Label:
            text: 'Key size'
