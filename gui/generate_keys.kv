<GenerateKeysScreen>:
    GridLayout:
        cols: 2
        row_force_default: True
        row_default_height: dp(50)
        spacing: dp(10)
        padding: dp(10)

        Label:
            text: 'Name'
            halign: 'right'

        TextInput:
            id: name_input
            hint_text: 'Input name'

        Label:
            text: 'Email'
            halign: 'right'

        TextInput:
            id: email_input
            hint_text: 'Input email'

        Label:
            text: 'Key Size'
            halign: 'right'

        TextInput:
            id: key_size_input
            hint_text: 'Input key size'

        Label:
            text: 'Choose Algorithm'
            halign: 'right'

        Spinner:
            id: algorithm_spinner
            text: 'Select algorithm'
            values: ['ELGamal and DSA', 'RSA']
            size_hint_y: None
            height: dp(50)

        Button:
            text: 'Confirm'
            size_hint_x: None
            width: dp(100)
            on_press: root.collect_data(name_input.text, email_input.text, key_size_input.text, algorithm_spinner.text)